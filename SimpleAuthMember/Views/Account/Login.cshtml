@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">

        <div class="col-sm-12 col-md-12 center-block">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form" }))
            {
                <div class="form-group">
                    <label for="username">User:</label>
                    <div class="row">
                        <div class="col-sm-8 col-md-4">
                            <input type="text" class="form-control" id="username" name="username" placeholder="Introduzca su nombre de usuario">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Pass:</label>
                    <div class="row">
                        <div class="col-sm-8 col-md-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Introduzca su contraseña">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Login</button>

            }
        </div>
    </div>
</div>